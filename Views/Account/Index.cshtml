@{
}

<h1>Account</h1>

<span>@ViewBag.UserName</span>


<table class="table table-striped table-boardered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
            @{
                foreach (var m in Model)
                {
                                            <tr>
                                            
                                                <td>@m.Id</td>
                                                <td>@m.Balance</td>

                                            </tr>
                }

        }
    </tbody>
</table>

<br>


    <div class= "row">
    @{ foreach (var m in Model){
                    <div class="col-3">
                    <partial name = "_Account" model="@m"></partial>
                    <div/>
            }
    }

                    </div>
