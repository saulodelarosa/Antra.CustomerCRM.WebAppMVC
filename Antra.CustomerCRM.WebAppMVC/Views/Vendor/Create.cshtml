@model VendorModel
<form asp-action="Create" asp-controller="Vendor" method="post">
    <div class="row">
        <div class="col-4 mb-3">
            <label for="txtName">Name</label>
            <input type="text" id="txtName" name="Name" class="form-control" placeholder="Enter Name"  />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="txtCity">City</label>
            <input type="text" id="txtCity" name="City" class="form-control" placeholder="Enter City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="txtCountry">Country</label>
            <input type="text" id="txtCountry" name="Country" class="form-control" placeholder="Enter Units On Oder" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        
    </div>
    <div class="row">
        <div class="col-4 mb-3">
            <label for="txtMobile">Mobile</label>
            <input type="text" id="txtMobile" name="Mobile" class="form-control" placeholder="Enter Reorder Level" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="txtEmailId">EmailId</label>
            <input type="text" id="txtEmailId" name="EmailId" class="form-control" placeholder="Enter true if discontinued" />
            <span asp-validation-for="EmailId" class="text-danger"></span>
        </div>
        <div class="col-4 mb-3">
            <label for="txtIsActive">IsActive</label>
           <input type="text" class="form-control" id="txtIsActive" name="IsActive" placeholder="Enter Vendor ID"/>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
</form>