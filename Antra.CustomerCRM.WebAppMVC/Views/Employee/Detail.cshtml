@model EmployeeModel
<div class="row">
    <div class="col-5">
        <img src="@Model.PhotoPath" width="200px" height="350px"/>
    </div>
    <div class="col-7">
        <table class="table table-bordered table-striped">
            <tr> 
                <td>First Name</td>
                <td>@Model.FirstName</td>
            </tr>
             <tr> 
                <td>Last Name</td>
                <td>@Model.FirstName</td>
            </tr>
            <tr> 
                <td>Phone</td>
                <td>@Model.Phone</td>
            </tr>
            <tr> 
                <td>Title</td>
                <td>@Model.Title</td>
            </tr>
        </table>
    </div>
</div>