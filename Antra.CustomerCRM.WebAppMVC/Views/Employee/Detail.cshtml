@model EmployeeModel
<div class="row">
    <div class="col-5">
        <img src="@Model.PhotoPath" width="200px" height="350px"/>
    </div>
    <div class="col-7">
        <table class="table table-bordered table-striped">
            <tr> 
                <td>First Name</td>
                <td>@Model.FirstName</td>
            </tr>
             <tr> 
                <td>Last Name</td>
                <td>@Model.LastName</td>
            </tr>
            <tr> 
                <td>Title</td>
                <td>@Model.Title</td>
            </tr>
            <tr> 
                <td>Title Of Courtesy</td>
                <td>@Model.TitleOfCourtesy</td>
            </tr>
            <tr> 
                <td>Birth Date</td>
                <td>@Model.BirthDate</td>
            </tr>
            <tr> 
                <td>Hire Date</td>
                <td>@Model.HireDate</td>
            </tr>
            <tr> 
                <td>Address</td>
                <td>@Model.Address</td>
            </tr>
            <tr> 
                <td>City</td>
                <td>@Model.City</td>
            </tr>
            <tr> 
                <td>Postal Code</td>
                <td>@Model.PostalCode</td>
            </tr>
            <tr> 
                <td>Country</td>
                <td>@Model.Country</td>
            </tr>
            <tr> 
                <td>Phone</td>
                <td>@Model.Phone</td>
            </tr>
            <tr> 
                <td>Reports To</td>
                <td>@Model.ReportsTo</td>
            </tr>
        </table>
    </div>
</div>