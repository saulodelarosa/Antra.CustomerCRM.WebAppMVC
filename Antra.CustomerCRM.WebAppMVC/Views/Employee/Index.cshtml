@model IEnumerable<EmployeeModel>
<h1>Employee List</h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title</th>
            <th>City</th>
            <th>Hire Date</th>
            <th>Phone</th>
            <th>Country</th>
            <th>Options</th>
        </tr>

    </thead>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.FirstName</td>
            <td>@c.LastName</td>
            <td>@c.Title</td>
            <td>@c.City</td>
            <td>@c.HireDate</td>
            <td>@c.Phone</td>
            <td>@c.Country </td>
            <td>
                <a class="btn btn-warning" asp-action="Detail" asp-controller="Employee" asp-route-id="@c.Id">Details</a>
            </td>
        </tr>

    }
    </table>

    <br>

    <h2>
        <b class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="create">Create New Employee</a>
        </b>
   </h2>

   <br>

   <div class="card" style="width: 18rem;">
       @foreach(var x in Model){
            <img class="card-img-top" src="@x.PhotoPath" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@x.FirstName @x.LastName</h5>
                <p class="card-text">@x.Title | @x.City</p>
            </div>
       }
   </div>